---
import type { CollectionEntry } from "astro:content";
import { Github } from "lucide-react";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<article class="flex flex-col gap-1">
  <a href={`/projects/${project.slug}`}>
    <h2>{project.data.title}</h2>
  </a>
  <a href={`/projects/${project.slug}`}>
    <div
      class="flex h-24 w-48 items-center justify-center overflow-hidden rounded"
      transition:name="project-img"
      transition:animate="initial"
    >
      <img
        src={project.data.image}
        alt={project.data.title}
        class="h-full w-full rounded object-cover object-center"
      />
    </div>
  </a>
  <a href={project.data.url} class="flex gap-1">
    <Github />
    Code
  </a>
  <div class="flex gap-1">
    {
      project.data.stack.map((tech) => (
        <span class="mr-2 rounded-full bg-gray-200 px-2 py-1 text-sm text-gray-800 dark:bg-gray-800 dark:text-gray-200">
          {tech}
        </span>
      ))
    }
  </div>
  <p class="line-clamp-2">
    {project.body}
  </p>
</article>
